<div class="container">
  <div class="row card-container">
    <% @students.sample(42).each do |student| %>

      <%= render 'shared/student_card', student: student %>

    <% end %>
  </div>
</div>

<%# -------------------------------------------------------------------------------------- %>
<%# Bootstrap Modal ==> students/:id %>

<div class="modal fade" id="cardModalStudentShow" tabindex="-1" role="dialog" aria-labelledby="cardModalStudentShowLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">

        <h2 class="modal-title" id="cardModalStudentShowLabel">Title</h2>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

      </div>

      <div class="modal-body">

        Modal content

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Contact</button>
      </div>
    </div>
  </div>
</div>
