<div class="col col-12 col-md-6 col-lg-4">
  <div class="card-product position-relative" data-student-id=<%= student.id %>>
      <%= image_tag student.picture_url if student.picture_url %>
      <div class="card-product-infos d-flex flex-column flex-grow-1 justify-content-between">

        <div class="d-flex card-student justify-content-between align-items-top pr-2">
          <h2><%= student.name %></h2>
          <div class="hidden">
            <div class="card-inner-links">
              <%= link_to "https://github.com/#{student.username}", method: :get, target: '_blank' do %>
                <i class="fab fa-github"></i>
              <% end %>
              <%= link_to '', class: 'card-show-link', data: {
                toggle: "modal",
                target: "#cardModalStudentShow",
                student_id: student.id,
                } do %>
                  <i class="far fa-eye"></i>
              <% end %>
            </div>
          </div>

        </div>
        <span class="text-muted small">Batch #<%= student.batch %></span>
        <div>
          <% student.skills.each do |skill| %>
            <span class="badge rounded-pill bg-light lighter-text"><%= skill.name %></span>
          <% end %>
        </div>
      </div>
  </div>
</div>
