<%# -------------------------------------------------------------------------------------- %>
<%# Bootstrap Modal %>

<div class="modal fade" id=<%= modal_name %> tabindex="-1" role="dialog" aria-labelledby=<%= "#{modal_name}Label" %> aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">

        <h2 class="modal-title" id=<%= "#{modal_name}Label" %>>Title</h2>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

      </div>

      <div class="modal-body">

        Modal content

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-light">Contact</button>
      </div>
    </div>
  </div>
</div>
