<div class="container">
  <div class="d-flex justify-content-between mb-3 mt-3">
    <div class="d-flex align-items-center">
      <h1 class="mr-3">Build your team</h1>
      <h2 id="counter"></h2>
    </div>
    <%= link_to new_gig_path,
      method: :get,
      id: 'create-btn',
      class: 'btn-rainbow' do %>
      Create
    <% end %>
  </div>

  <div class="row card-container">
    <% @students.sample(42).each do |student| %>
      <div class="col col-12 col-md-6 col-lg-4">
        <div class="card-product position-relative" data-student-id=<%= student.id %>>
            <%= image_tag student.picture_url, alt: "", class: "rounded"%>
            <div class="card-product-infos d-flex flex-column flex-grow-1 justify-content-between">
              <div class="d-flex justify-content-between align-items-top pr-3">
                <h2><%= student.name %></h2>
                <div class="card-inner-links">
                  <%= link_to "https://github.com/#{student.username}", method: :get, target: '_blank' do %>
                    <i class="fab fa-github"></i>
                  <% end %>
                  <%= link_to '', class: 'card-show-link', data: {
                    toggle: "modal",
                    target: "#cardModalStudentShow",
                    student_id: student.id,
                    } do %>
                      <i class="far fa-eye"></i>
                  <% end %>
                </div>
              </div>
              <span class="text-muted small">Batch #<%= student.batch %></span>
              <div>
                <% student.skills.each do |skill| %>
                  <span class="badge rounded-pill bg-light lighter-text"><%= skill.name %></span>
                <% end %>
              </div>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%# -------------------------------------------------------------------------------------- %>
<%# Bootstrap Modal ==> students/:id %>

<div class="modal fade" id="cardModalStudentShow" tabindex="-1" role="dialog" aria-labelledby="cardModalStudentShowLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">

        <h2 class="modal-title" id="cardModalStudentShowLabel">Title</h2>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

      </div>

      <div class="modal-body">

        Modal content

      </div>
      <div class="modal-footer">
        <%# <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> %>
        <%# <button type="button" class="btn btn-primary">Send message</button> %>
      </div>
    </div>
  </div>
</div>
