<%= simple_form_for(@gig) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :starts_at, discard_hour: true %>
  </div>

  <div class="form-inputs">
    <%= f.input :ends_at, discard_hour: true %>
  </div>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <% if params[:student_id].present? %>
    <% params[:student_id].each do |id|%>
      <%= hidden_field_tag "student_id[]", id %>
    <% end %>
  <% end %>

  <br>
  <div class="form-actions">
    <%= f.button :submit, class: "btn-rainbow"%>
  </div>
  <br>
<% end %>
