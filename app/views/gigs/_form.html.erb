<div class="d-flex justify-content-between align-items-center">
  <h3>💪 Your selection <%= "(#{@students.size})" unless @students.nil? %> 🐱‍👤 </h3>
  <div>
    <% unless @students.nil? %>
      <% @students.each do |student| %>
        <%= link_to '', method: :get, class: 'ml-3' do %>
          <%= image_tag student.picture_url, alt: '', class: 'avatar-large avatar-bordered' %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<br>

<%= simple_form_for(@gig) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :start %>
  </div>

  <div class="form-inputs">
    <%= f.input :end %>
  </div>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <% params[:student_id].each do |id|%>
    <%= hidden_field_tag "student_id[]", id %>
  <% end %>

  <br>
  <div class="form-actions">
    <%= f.button :submit, class: "btn-rainbow"%>
  </div>
  <br>
<% end %>
